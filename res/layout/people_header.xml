<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutHeader"
    android:layout_width="fill_parent"
    android:layout_height="50dip"
    android:layout_alignParentTop="true"
    android:background="@layout/header_gradient"
    android:orientation="horizontal">
    
    <!-- Logo -->
    <ImageView android:id="@+id/logoPeople"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Peoples List"
        android:src="@drawable/ic_launcher"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"/>

    <!-- Plus Button -->

    <ImageButton
        android:id="@+id/btnAddSitePeople"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dip"
        android:contentDescription="Add People"
        android:background="@null"
        android:src="@drawable/plus"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/textViewPeople"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/logoPeople"
        android:text="Peoples List"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>